@code {
    private CreateCryptoAsset _cryptoAsset = new();

    //[Parameter]
    //public EventCallback<CryptoAssetVM> CryptoAsset { get; set; } = new();

    [Parameter]
    public EventCallback<bool> OnClose { get; set; }

    private string[] _tempSymbols = { "BTC", "ETH" };

    private async Task HandleSubmit()
    {
        var responseMessage = await _httpTracker.CreateItem(_cryptoAsset, "/api/crypto-assets");
        if (responseMessage == null) return;
        if (responseMessage.StatusCode == System.Net.HttpStatusCode.OK)
        {
            await OnClose.InvokeAsync();
        }
        else
            errorMessage.Message = await responseMessage.Content.ReadAsStringAsync();
    }
}
